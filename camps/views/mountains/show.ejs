<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Sceneries</p>
            <div class="list-group">
                <li class="list-group-item">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <p><img class="img-responsive" src="<%=mountains.image%>"></p>
                <div class="caption-full">
                    <p class="pull-right">Submitted by <em><%=mountains.author.username%></em></p>
                    <h4><%=mountains.name%><h4>
                    <p><%=mountains.description%></p>
        <div class="text-left">
                    <% if (currentUser && mountains.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-warning" href="/mountains/<%=mountains._id%>/edit">Edit</a>
                    <form id="delete-form" action="/mountains/<%=mountains._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                    </form>
                    <%}%>
                </div>
                </div>
            </div>
            <div class="well">
                <div class="text-right">

                     <a class="btn btn-success" href = '/mountains/<%=mountains._id%>/comments/new'>Add Comment</a>
                </div>
                
                    <%mountains.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            
                            <p> <%=comment.author.username%>  </p>
                            <span class="pull-right">10 days ago</span>
                            <p><%=comment.text%></p>
                            <a class="btn btn-xs btn-warning" href="/mountains/<%=mountains._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form id="delete-form" action="/mountains/<%=mountains._id%>/comments/<%=comment._id%>?_method=delete" method="POST">
                                <input type="Submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>