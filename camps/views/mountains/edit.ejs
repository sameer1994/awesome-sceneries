<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align:center">Edit <%=mountain.name%> </h1>
    <div style="width:30%; margin:0 auto;">
<form action = "/mountains/<%=mountain._id%>/?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type= "text" name="mountain[name]" value= "<%=mountain.name%>">
    </div>
    <div class="form-group">
    <input class="form-control" type= "text" name="mountain[image]" value= "<%=mountain.image%>">
    </div>
    <div class="form-group">
    <input class="form-control" type= "text" name="mountain[description]" value= "<%=mountain.description%>">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-default">Submit</button>
    </div>
    </form>
    </div>
    </div>
    </div>
<% include ../partials/footer %>